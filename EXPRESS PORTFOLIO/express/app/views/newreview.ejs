  <script>
    // JavaScript code to fetch reviews from the server and add them dynamically
    const reviewsContainer = document.getElementById('reviews-container');

    // Function to create star icons based on the rating
    function createStars(rating) {
      const starImagePath = '/images/WhatsApp_Image_2023-05-20_at_12.08.14_AM-removebg-preview (1).png'; // Path to your star image
      const starsHTML = `<img src="${starImagePath}" alt="star" width="20" height="20" />`.repeat(rating);
      return `<div class="stars">${starsHTML}</div>`;
    }

    // Function to add reviews to the HTML structure
    function addReviews(reviews) {
      reviews.forEach((review) => {
        const reviewElement = document.createElement('div');
        reviewElement.classList.add('review');

        const nameElement = document.createElement('p');
        nameElement.classList.add('name');
        nameElement.innerText = review.name;

        const messageElement = document.createElement('p');
        messageElement.classList.add('message');
        messageElement.innerText = review.message;
        const starsElement = document.createElement('p');
        starsElement.innerHTML = createStars(review.stars);

        reviewElement.appendChild(nameElement);
        reviewElement.appendChild(messageElement);
        reviewElement.appendChild(starsElement);

        reviewsContainer.appendChild(reviewElement);
      });
    }

    // Fetch reviews from the server
    fetch('fetchreviews.php')
      .then((response) => response.json())
      .then((data) => {
        // Call the function to add reviews
        addReviews(data);
      })
      .catch((error) => {
        console.error('Error:', error);
      });
  </script>

